{
    "name": "stripe-backend",
    "version": "1.0.0",
    "description": "Stripe payment backend with Express and TypeScript",
    "main": "dist/server.js",
    "scripts": {
        "dev": "tsx watch src/server.ts",
        "build": "tsc",
        "start": "node dist/server.js",
        "build:all": "cd ../frontend && npm run build && cd ../backend && npm run build",
        "start:integrated": "npm run build:all && npm start"
    },
    "keywords": [
        "stripe",
        "payments",
        "express",
        "typescript"
    ],
    "author": "",
    "license": "MIT",
    "dependencies": {
        "express": "^4.18.2",
        "stripe": "^14.8.0",
        "dotenv": "^16.3.1",
        "cors": "^2.8.5"
    },
    "devDependencies": {
        "@types/express": "^4.17.21",
        "@types/node": "^20.10.5",
        "@types/cors": "^2.8.17",
        "tsx": "^4.7.0",
        "typescript": "^5.3.3"
    }
}